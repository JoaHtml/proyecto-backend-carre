<div class="bg-light p-3 border border-dark">
    <h2>Agregar un producto</h2>
    <form id="form_upload_product" action="/" method="post">
        <label for="name_product">Nombre Producto</label>
        <input type="text" name="title" id="name_product">
        <br />
        <br />
        <label for="price_product">Precio Producto</label>
        <input type="text" name="price" id="price_product">
        <br />
        <br />
        <label for="url_product">URL Imagen Producto</label>
        <input type="text" name="thumbnail" id="url_product">
        <br />
        <br />
        <button type="submit" class="btn btn-success">Agregar</button>
    </form>
    <div>
        <h2>Productos</h2>
        <table class="table" id="tableProducts">
            <tr>
                <th>Nombre</th>
                <th>Precio [US$]</th>
                <th>Imagen</th>
            </tr>
            {{#if isEmpty}}
            <tr>
                <td>No hay productos subidos</td>
            </tr>
            {{/if}}
        </table>
    </div>
</div>
<div class="mt-3 bg-light p-3 border border-dark">
    <h2>Centro de Mensajes</h2>
    <div class="border border-primary m-3">
        <ul id="messages" class="list-group"></ul>
    </div>
    <form id="form" action="" class="input-group">
        <div class="input-group">
            <input type="email" name="email" id="email_input" placeholder="email@email.com" class="form-control"
                required />
        </div>
        <div class="input-group">
            <input class="form-control" id="msg_input" autocomplete="off" aria-describedby="button-addon1"
                placeholder="mensaje" />
            <button class="btn btn-light btn-outline-dark" type="submit" id="button-addon1">Enviar</button>
        </div>
    </form>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/index.js"></script>