<h1>Productos</h1>
<div id="index">

    {{#if isEmpty}}

    <h3>{{message}}</h3>
    
    {{/if}}

    {{#if isAdmin}}
    
    <div>
        <h2>Â¡Hola Admin!</h2>
    </div>
    
        {{#each productsTemplate}}
        
        <div class="card card{{id}}">
            <span><img src={{thumbnail}} alt="imagen" width="50px"></span>
            <h3>{{title}}</h3>
            <p><strong>Precio:</strong> US${{price}}</p>
            <button>Quitar Producto</button>
        </div>
        {{/each}}
    <div>
        <button>Agregar Producto</button>
        <div id="productForm"></div> //agregar formulario al apretar boton para completar y subir nuevo producto
    </div>
    
    {{else}}
    
        {{#each productsTemplate}}
    
        <div class="card card{{id}}">
            <span><img src={{thumbnail}} alt="imagen" width="50px"></span>
            <h3>{{title}}</h3>
            <p><strong>Precio:</strong> US${{price}}</p>
            <button>Agregar al Carrito</button>
        </div>
    
        {{/each}}
    
    {{/if}}

</div>