    <h3>No hay productos subidos</h3>

    {{/if}}
    {{!-- AGREGAR if isAdmin PARA PONER UNA U OTRA COSA SI ES O NO EL ADMIN QUIEN INGRESA --}}

    {{#if isAdmin}}
    {{#each productsJSON}}
    <div><h2>Â¡Hola Admin!</h2></div>
    <div class="card card{{id}}">
